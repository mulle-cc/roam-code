---
const features = [
  {
    icon: 'board',
    title: 'Visual Boards',
    description:
      'Drag-and-drop Kanban boards that give your team a clear view of every task, from backlog to done.',
  },
  {
    icon: 'automation',
    title: 'Smart Automation',
    description:
      'Automate repetitive workflows with rules and triggers. Move cards, assign tasks, and send alerts automatically.',
  },
  {
    icon: 'analytics',
    title: 'Real-Time Analytics',
    description:
      'Track velocity, burndown, and cycle time with dashboards that update as your team works.',
  },
  {
    icon: 'collaboration',
    title: 'Team Collaboration',
    description:
      'Comment threads, @mentions, and file sharing built right into every task. No more context switching.',
  },
  {
    icon: 'integrations',
    title: 'Powerful Integrations',
    description:
      'Connect with GitHub, Slack, Figma, and 100+ other tools your team already uses.',
  },
  {
    icon: 'security',
    title: 'Enterprise Security',
    description:
      'SOC 2 certified with SSO, role-based access, and audit logs. Your data stays yours.',
  },
];
---

<section class="features section" id="features" aria-labelledby="features-heading">
  <div class="container">
    <div class="section-header">
      <h2 id="features-heading">Everything you need to ship faster</h2>
      <p>
        Powerful features that replace your scattered tool stack with one
        focused workspace.
      </p>
    </div>
    <div class="features-grid" role="list">
      {
        features.map((feature) => (
          <article class="feature-card" role="listitem">
            <div class="feature-icon" aria-hidden="true">
              {feature.icon === 'board' && (
                <svg width="28" height="28" viewBox="0 0 28 28" fill="none">
                  <rect x="2" y="4" width="7" height="20" rx="2" fill="#818cf8" />
                  <rect x="11" y="4" width="7" height="14" rx="2" fill="#4f46e5" />
                  <rect x="20" y="4" width="7" height="8" rx="2" fill="#c7d2fe" />
                </svg>
              )}
              {feature.icon === 'automation' && (
                <svg width="28" height="28" viewBox="0 0 28 28" fill="none">
                  <path d="M14 2L2 9l12 7 12-7L14 2z" fill="#c7d2fe" />
                  <path d="M2 19l12 7 12-7" stroke="#4f46e5" stroke-width="2" stroke-linecap="round" />
                  <path d="M2 14l12 7 12-7" stroke="#818cf8" stroke-width="2" stroke-linecap="round" />
                </svg>
              )}
              {feature.icon === 'analytics' && (
                <svg width="28" height="28" viewBox="0 0 28 28" fill="none">
                  <rect x="3" y="16" width="5" height="10" rx="1" fill="#c7d2fe" />
                  <rect x="11" y="10" width="5" height="16" rx="1" fill="#818cf8" />
                  <rect x="19" y="4" width="5" height="22" rx="1" fill="#4f46e5" />
                </svg>
              )}
              {feature.icon === 'collaboration' && (
                <svg width="28" height="28" viewBox="0 0 28 28" fill="none">
                  <circle cx="10" cy="8" r="4" fill="#818cf8" />
                  <circle cx="20" cy="8" r="4" fill="#4f46e5" />
                  <path d="M2 22c0-4.4 3.6-8 8-8 1.5 0 2.9.4 4 1.1A8 8 0 0126 22" stroke="#c7d2fe" stroke-width="2" />
                </svg>
              )}
              {feature.icon === 'integrations' && (
                <svg width="28" height="28" viewBox="0 0 28 28" fill="none">
                  <circle cx="14" cy="14" r="4" fill="#4f46e5" />
                  <circle cx="14" cy="4" r="2" fill="#818cf8" />
                  <circle cx="14" cy="24" r="2" fill="#818cf8" />
                  <circle cx="4" cy="14" r="2" fill="#818cf8" />
                  <circle cx="24" cy="14" r="2" fill="#818cf8" />
                  <path d="M14 6v4M14 18v4M6 14h4M18 14h4" stroke="#c7d2fe" stroke-width="2" />
                </svg>
              )}
              {feature.icon === 'security' && (
                <svg width="28" height="28" viewBox="0 0 28 28" fill="none">
                  <path d="M14 2L4 7v6c0 6.6 4.3 12.4 10 14 5.7-1.6 10-7.4 10-14V7L14 2z" fill="#c7d2fe" />
                  <path d="M10 14l3 3 5-6" stroke="#4f46e5" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" />
                </svg>
              )}
            </div>
            <h3>{feature.title}</h3>
            <p>{feature.description}</p>
          </article>
        ))
      }
    </div>
  </div>
</section>

<style>
  .features {
    background-color: var(--color-bg);
  }

  .features-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-xl);
  }

  .feature-card {
    padding: var(--space-xl);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    transition: transform var(--transition-base), box-shadow var(--transition-base);
  }

  .feature-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }

  .feature-icon {
    width: 56px;
    height: 56px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: var(--color-bg-alt);
    border-radius: var(--radius-md);
    margin-bottom: var(--space-md);
  }

  .feature-card h3 {
    margin-bottom: var(--space-sm);
  }

  .feature-card p {
    color: var(--color-text-light);
    font-size: 0.9375rem;
    line-height: 1.6;
  }

  @media (min-width: 640px) {
    .features-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .features-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }
</style>
