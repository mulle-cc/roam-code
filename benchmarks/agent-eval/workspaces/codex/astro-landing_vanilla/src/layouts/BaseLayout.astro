---
import "../styles/global.css";

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "FlowBoard | Project Management For Teams That Ship Fast",
  description = "FlowBoard helps product, engineering, and operations teams plan work, automate routines, and deliver outcomes together."
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>
  <body>
    <a class="skip-link" href="#main-content">Skip to main content</a>
    <slot />
  </body>
</html>
