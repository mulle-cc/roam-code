---
const features = [
  {
    id: 1,
    title: "Visual Task Boards",
    description: "Organize work with intuitive kanban boards. Drag and drop tasks across customizable columns to track progress at a glance.",
    icon: "board"
  },
  {
    id: 2,
    title: "Real-Time Collaboration",
    description: "Work together seamlessly with live updates, comments, and @mentions. See changes as they happen across your team.",
    icon: "collaboration"
  },
  {
    id: 3,
    title: "Smart Automation",
    description: "Automate repetitive tasks with custom workflows. Set rules and let FlowBoard handle the routine work for you.",
    icon: "automation"
  },
  {
    id: 4,
    title: "Powerful Analytics",
    description: "Make data-driven decisions with comprehensive reports. Track velocity, burndown, and team performance metrics.",
    icon: "analytics"
  },
  {
    id: 5,
    title: "Integrations",
    description: "Connect with the tools you already use. Seamlessly integrate with Slack, GitHub, Google Drive, and 100+ apps.",
    icon: "integrations"
  },
  {
    id: 6,
    title: "Enterprise Security",
    description: "Keep your data safe with enterprise-grade security. SOC 2 compliant with 256-bit encryption and SSO support.",
    icon: "security"
  }
];
---

<section class="features section" id="features">
  <div class="container">
    <div class="section-header text-center">
      <h2 class="section-title">Everything you need to deliver projects</h2>
      <p class="section-subtitle">
        Powerful features designed to help your team work smarter, not harder
      </p>
    </div>

    <div class="features-grid grid grid-3">
      {features.map((feature) => (
        <article class="feature-card card">
          <div class="feature-icon" aria-hidden="true">
            <svg class="icon" viewBox="0 0 64 64" fill="none" xmlns="http://www.w3.org/2000/svg">
              {feature.icon === 'board' && (
                <>
                  <rect x="8" y="12" width="48" height="40" rx="4" stroke="currentColor" stroke-width="3" fill="none"/>
                  <line x1="24" y1="12" x2="24" y2="52" stroke="currentColor" stroke-width="2"/>
                  <line x1="40" y1="12" x2="40" y2="52" stroke="currentColor" stroke-width="2"/>
                  <rect x="12" y="18" width="8" height="6" rx="1" fill="currentColor"/>
                  <rect x="12" y="28" width="8" height="6" rx="1" fill="currentColor"/>
                  <rect x="28" y="18" width="8" height="6" rx="1" fill="currentColor"/>
                  <rect x="44" y="18" width="8" height="6" rx="1" fill="currentColor"/>
                </>
              )}
              {feature.icon === 'collaboration' && (
                <>
                  <circle cx="24" cy="20" r="8" stroke="currentColor" stroke-width="3" fill="none"/>
                  <circle cx="44" cy="28" r="6" stroke="currentColor" stroke-width="3" fill="none"/>
                  <path d="M12 52C12 44 16 40 24 40C32 40 36 44 36 52" stroke="currentColor" stroke-width="3" fill="none"/>
                  <path d="M36 52C36 46 39 42 44 42C49 42 52 46 52 52" stroke="currentColor" stroke-width="3" fill="none"/>
                </>
              )}
              {feature.icon === 'automation' && (
                <>
                  <circle cx="32" cy="32" r="20" stroke="currentColor" stroke-width="3" fill="none"/>
                  <path d="M32 16L36 28L48 32L36 36L32 48L28 36L16 32L28 28Z" fill="currentColor"/>
                </>
              )}
              {feature.icon === 'analytics' && (
                <>
                  <rect x="8" y="12" width="48" height="40" rx="2" stroke="currentColor" stroke-width="3" fill="none"/>
                  <rect x="14" y="36" width="8" height="10" rx="1" fill="currentColor"/>
                  <rect x="26" y="28" width="8" height="18" rx="1" fill="currentColor"/>
                  <rect x="38" y="20" width="8" height="26" rx="1" fill="currentColor"/>
                </>
              )}
              {feature.icon === 'integrations' && (
                <>
                  <circle cx="32" cy="32" r="6" fill="currentColor"/>
                  <circle cx="16" cy="16" r="4" fill="currentColor"/>
                  <circle cx="48" cy="16" r="4" fill="currentColor"/>
                  <circle cx="16" cy="48" r="4" fill="currentColor"/>
                  <circle cx="48" cy="48" r="4" fill="currentColor"/>
                  <line x1="20" y1="18" x2="28" y2="28" stroke="currentColor" stroke-width="2"/>
                  <line x1="44" y1="18" x2="36" y2="28" stroke="currentColor" stroke-width="2"/>
                  <line x1="20" y1="46" x2="28" y2="36" stroke="currentColor" stroke-width="2"/>
                  <line x1="44" y1="46" x2="36" y2="36" stroke="currentColor" stroke-width="2"/>
                </>
              )}
              {feature.icon === 'security' && (
                <>
                  <path d="M32 8L12 16V28C12 42 20 52 32 56C44 52 52 42 52 28V16L32 8Z" stroke="currentColor" stroke-width="3" fill="none"/>
                  <path d="M24 32L30 38L42 26" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round" fill="none"/>
                </>
              )}
            </svg>
          </div>
          <h3 class="feature-title">{feature.title}</h3>
          <p class="feature-description">{feature.description}</p>
        </article>
      ))}
    </div>
  </div>
</section>

<style>
  .features {
    background-color: var(--color-bg);
  }

  .section-header {
    margin-bottom: var(--space-3xl);
  }

  .section-title {
    font-size: 2rem;
    color: var(--color-text);
    margin-bottom: var(--space-md);
  }

  .section-subtitle {
    font-size: 1.125rem;
    color: var(--color-text-light);
    max-width: 600px;
    margin: 0 auto;
  }

  .features-grid {
    gap: var(--space-xl);
  }

  .feature-card {
    text-align: center;
    border: 1px solid var(--color-border);
    transition: all var(--transition-base);
  }

  .feature-card:hover {
    border-color: var(--color-primary);
  }

  .feature-icon {
    width: 64px;
    height: 64px;
    margin: 0 auto var(--space-lg);
    color: var(--color-primary);
  }

  .icon {
    width: 100%;
    height: 100%;
  }

  .feature-title {
    font-size: 1.25rem;
    color: var(--color-text);
    margin-bottom: var(--space-md);
  }

  .feature-description {
    font-size: 1rem;
    color: var(--color-text-light);
    line-height: 1.6;
    margin-bottom: 0;
  }

  @media (min-width: 768px) {
    .section-title {
      font-size: 2.5rem;
    }
  }
</style>
